<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jeda-core="http://www.intervale.ru/schema/jeda-core"
       xmlns:jeda-persistentqueue="http://www.intervale.ru/schema/jeda-persistentqueue"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans.xsd
               http://www.intervale.ru/schema/jeda-core http://www.intervale.ru/schema/jeda-core.xsd
               http://www.intervale.ru/schema/jeda-persistentqueue http://www.intervale.ru/schema/jeda-persistentqueue.xsd">

    <import resource="classpath:jeda-core-config.xml"/>
    <import resource="classpath:txn-jta-config.xml"/>
    <import resource="classpath:autokey-mock-config.xml"/>
    <import resource="classpath:dbtool-config.xml"/>
    <import resource="classpath:jeda-clusterservice-mock-config.xml"/>


    <bean id="jtaTransactionManager"
          class="com.atomikos.icatch.jta.AtomikosTransactionManager"
          init-method="init" destroy-method="close">
        <property name="forceShutdown" value="true"/>
    </bean>


    <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:db_h2.properties</value>
            </list>
        </property>
    </bean>

    <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.driverClass}"/>
        <property name="url" value="${jdbc.connectionUrl}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>


    <jeda-persistentqueue:berkeley-connection-factory id="berkeleyFactory" path="./target/berkeley_db/"
                                                          lockingTimeout="1000"/>

    <jeda-core:stage path="Stage-1">
        <jeda-persistentqueue:berkeley-queue dbName="stage1" connectionFactory="berkeleyFactory"
                                                 maxSize="1000000"/>
        <jeda-core:smooth-resource-controller startBatchSize="1000" maxThreadCount="4"/>
        <jeda-core:event-processor
                class="ru.kwanza.jeda.persistentqueue.berkeley.EventProcessor1"/>
        <jeda-core:stage-thread-manager threadNamePrefix="ru.kwanza.Stage1"/>
    </jeda-core:stage>

    <jeda-core:stage path="Stage-2">
        <jeda-persistentqueue:berkeley-queue dbName="stage2" connectionFactory="berkeleyFactory"
                                                 maxSize="1000000"/>
        <jeda-core:smooth-resource-controller startBatchSize="1000" maxThreadCount="4"/>
        <jeda-core:event-processor
                class="ru.kwanza.jeda.persistentqueue.berkeley.EventProcessor2"/>
        <jeda-core:stage-thread-manager threadNamePrefix="ru.kwanza.Stage2"/>
    </jeda-core:stage>

    <jeda-core:stage path="Stage-3">
        <jeda-persistentqueue:berkeley-queue dbName="stage2" connectionFactory="berkeleyFactory"
                                                 maxSize="1000000"/>
        <jeda-core:smooth-resource-controller startBatchSize="1000" maxThreadCount="4"/>
        <jeda-core:event-processor
                class="ru.kwanza.jeda.persistentqueue.berkeley.EventProcessor3"/>
        <jeda-core:stage-thread-manager threadNamePrefix="ru.kwanza.Stage3"/>
    </jeda-core:stage>


</beans>