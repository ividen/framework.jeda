<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:dbtool-config.xml"/>
    <import resource="classpath:dbtool-orm-config.xml"/>
    <import resource="classpath:jeda-persistentqueue-default-jdbc-queue-config.xml"/>


    <bean id="defaultQueueController" class="ru.kwanza.jeda.persistentqueue.jdbc.JDBCQueuePersistenceController"
          scope="singleton" >
       <constructor-arg index="0" ref="dbtool.IEntityManager"/>
        <constructor-arg index="1" value="ru.kwanza.jeda.persistentqueue.jdbc.queue.EventQueue"/>
        <constructor-arg index="2" value="ru.kwanza.jeda.persistentqueue.jdbc.queue.EventQueue.Builder"/>
        <constructor-arg index="3" value="null"/>
        <constructor-arg index="4" value="id"/>
        <constructor-arg index="5" value="nodeId"/>
    </bean>

    <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:db_h2.properties</value>
            </list>
        </property>
    </bean>

    <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.driverClass}"/>
        <property name="url" value="${jdbc.connectionUrl}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>
</beans>