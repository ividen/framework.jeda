<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:txn-jta-config.xml"/>

    <bean id="baseTransactionManager" class="ru.kwanza.jeda.core.tm.BaseTransactionManager">
        <constructor-arg ref="txn.ITransactionManager"/>
    </bean>

    <bean id="jtaTransactionManager"
          class="com.atomikos.icatch.jta.AtomikosTransactionManager"
          init-method="init" destroy-method="close">
        <property name="forceShutdown" value="true"/>
    </bean>


    <bean id="testTxnBean" class="ru.kwanza.jeda.core.tm.TestTxnBean"/>

</beans>